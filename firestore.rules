service cloud.firestore {
  match /databases/{database}/documents {
    match /Users/{UserId} {
    	allow create, list, update: if IsAdmin();
      allow read, delete: if IsOwner(UserId) || IsAdmin();
    }
    
    function IsOwner(id) {
    	return request.auth.uid == id;
    }
    
    function IsAdmin() {
    	return request.auth.token['admin'] == true;
    }
  }
}